<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wzu.oa.mapper.KynamicMapper">
  <resultMap id="BaseResultMap" type="com.wzu.oa.common.entity.Kynamic">
    <!--
      WARNING - @mbg.generated
    -->
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="pid" jdbcType="INTEGER" property="pid" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="is_parent" jdbcType="BIT" property="isParent" />
  </resultMap>

  <select id="getKynamicByName" parameterType="java.lang.String" resultMap="BaseResultMap">
    SELECT *
    FROM kynamic
    WHERE name = #{name}
  </select>

  <select id="getSiblingNodes" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    SELECT *
    FROM kynamic
    WHERE pid = (
      SELECT pid
      FROM kynamic
      WHERE id = #{id}
    )
  </select>

  <select id="getParentNode" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    SELECT *
    FROM kynamic
    WHERE id = (
      SELECT pid
      FROM kynamic
      WHERE id = #{id}
    )
  </select>
</mapper>