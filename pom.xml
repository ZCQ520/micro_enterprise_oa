        <!-- log4j日志文件管理包版本 -->
        <slf4j.version>1.7.16</slf4j.version>
        <log4j.version>1.2.17</log4j.version>
        <shiro.version>1.3.2</shiro.version>

        <activiti.version>5.21.0</activiti.version>
    </properties>
        <dependencies>

            <dependency>
                <groupId>com.alibaba</groupId>
